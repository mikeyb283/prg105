class Time(object):

    def time_to_int(self):
        minutes = time.hour * 60 + time.minute
        seconds = minutes * 60 + time.second
        return seconds

    def __init__(self):
        self.minute = None
        self.second = None
        self.hour = None


time = Time()
time.hour = 11
time.minute = 59
time.second = 30

int_seconds = time.time_to_int()

print ('%.2d:%.2d:%.2d' % (time.hour, time.minute, time.second)) + ' is ' + str(int_seconds) + ' seconds'
